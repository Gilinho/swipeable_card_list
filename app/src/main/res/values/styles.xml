<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>

    <style name="Hint" parent="SubTitle">
        <item name="android:textSize">@dimen/hint</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="Alert">
        <item name="android:background">@color/alert_background</item>
    </style>

    <style name="SubTitle.Alert">
        <item name="android:textSize">@dimen/alert</item>
    </style>
</resources>
